<knowledge>
    <title>Tortious Act Liability System</title>
    <description>Determines whether a person must repair damages based on Dutch tortious act legislation.</description>

    <goal name="is-liable">
        <description>Is the person liable to repair damages from a tortious act?</description>
        <answer value="yes">The person is liable to repair the damages.</answer>
        <answer value="no">The person is not liable to repair the damages.</answer>
    </goal>

    <!-- Article 6:162 - Definition of a tortious act -->
    <rule>
        <description>If a person commits an unlawful act that can be attributed to them, and there's no justification, they are liable.</description>
        <if>
            <and>
                <fact name="unlawful-act">yes</fact>
                <fact name="attributed-to-person">yes</fact>
                <fact name="justification">no</fact>
            </and>
        </if>
        <then>
            <fact name="is-liable">yes</fact>
        </then>
    </rule>

    <!-- Article 6:164 - Children under 14 years -->
    <rule>
        <description>If the person is under 14 years old, they are not liable for tortious acts.</description>
        <if>
            <fact name="age-under-14">yes</fact>
        </if>
        <then>
            <fact name="is-liable">no</fact>
        </then>
    </rule>

    <!-- Article 6:165 - Persons with mental or physical disability -->
    <rule>
        <description>If the person is 14 or older and has a mental or physical disability, they can still be held liable.</description>
        <if>
            <and>
                <fact name="age-over-14">yes</fact>
                <fact name="mental-physical-disability">yes</fact>
            </and>
        </if>
        <then>
            <fact name="is-liable">yes</fact>
        </then>
    </rule>

    <!-- Article 6:163 - Standard of behavior must protect against damage -->
    <rule>
        <description>If the violated standard of behavior does not intend to protect against the damage suffered, the person is not liable.</description>
        <if>
            <fact name="standard-does-not-protect-damage">yes</fact>
        </if>
        <then>
            <fact name="is-liable">no</fact>
        </then>
    </rule>

    <!-- Questions -->
    <question>
        <description>Is the person under 14 years old?</description>
        <option>
            <description>Yes</description>
            <then>
                <fact name="age-under-14">yes</fact>
            </then>
        </option>
        <option>
            <description>No</description>
            <then>
                <fact name="age-under-14">no</fact>
            </then>
        </option>
    </question>

    <question>
        <description>Is the person over 14 years old?</description>
        <option>
            <description>Yes</description>
            <then>
                <fact name="age-over-14">yes</fact>
            </then>
        </option>
        <option>
            <description>No</description>
            <then>
                <fact name="age-over-14">no</fact>
            </then>
        </option>
    </question>

    <question>
        <description>Does the person have a mental or physical disability?</description>
        <option>
            <description>Yes</description>
            <then>
                <fact name="mental-physical-disability">yes</fact>
            </then>
        </option>
        <option>
            <description>No</description>
            <then>
                <fact name="mental-physical-disability">no</fact>
            </then>
        </option>
    </question>

    <question>
        <description>Did the person commit an unlawful act?</description>
        <option>
            <description>Yes</description>
            <then>
                <fact name="unlawful-act">yes</fact>
            </then>
        </option>
        <option>
            <description>No</description>
            <then>
                <fact name="unlawful-act">no</fact>
            </then>
        </option>
    </question>

    <question>
        <description>Can the unlawful act be attributed to the person?</description>
        <option>
            <description>Yes</description>
            <then>
                <fact name="attributed-to-person">yes</fact>
            </then>
        </option>
        <option>
            <description>No</description>
            <then>
                <fact name="attributed-to-person">no</fact>
            </then>
        </option>
    </question>

    <question>
        <description>Is there justification for the unlawful act?</description>
        <option>
            <description>Yes</description>
            <then>
                <fact name="justification">yes</fact>
            </then>
        </option>
        <option>
            <description>No</description>
            <then>
                <fact name="justification">no</fact>
            </then>
        </option>
    </question>

    <question>
        <description>Does the violated standard of behavior intend to protect against the damage suffered?</description>
        <option>
            <description>Yes</description>
            <then>
                <fact name="standard-does-not-protect-damage">no</fact>
            </then>
        </option>
        <option>
            <description>No</description>
            <then>
                <fact name="standard-does-not-protect-damage">yes</fact>
            </then>
        </option>
    </question>

</knowledge>
